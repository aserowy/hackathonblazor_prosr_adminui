<span>
    <div class="opblock-tag-section is-open">
        <div style="height: auto; border: none; margin: 0px; padding: 0px;">
            @foreach (var item in (this.Hubs ?? Array.Empty<Hub>()))
            {
                <HubComponent HubClient="HubClient" HubData="item"></HubComponent>
            }
        </div>        
    </div>
</span>
@code{
    [Parameter] public IGenericHubClient HubClient { get; set; }
    [Parameter] public IEnumerable<Hub> Hubs { get; set; }
}